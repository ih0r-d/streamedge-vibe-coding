{
  "id": null,
  "uid": "streamedge-overview",
  "title": "StreamEdge ‚Äî Service Health Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "üîå Gateway Uptime (s)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"gateway-service\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 60 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "üîê User Service UP",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"user-service\"}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "üìπ Video Service UP",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"video-service\"}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "üìà HTTP Request Rate",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{job}} {{method}} {{uri}}",
          "refId": "D"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "üî• Kafka View Events",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(kafka_server_brokertopicmetrics_messages_in_total[1m])",
          "legendFormat": "{{topic}}",
          "refId": "E"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "üß† JVM Heap Usage (MB)",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"} / 1024 / 1024",
          "legendFormat": "{{job}}",
          "refId": "F"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "üßµ JVM Live Threads",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "{{job}}",
          "refId": "G"
        }
      ]
    }
  ]
}
